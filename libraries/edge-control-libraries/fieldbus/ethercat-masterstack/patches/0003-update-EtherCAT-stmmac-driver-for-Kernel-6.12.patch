+	switch (sset) {
+	case ETH_SS_STATS:
+		len = STMMAC_STATS_LEN + STMMAC_QSTATS +
+		      STMMAC_TXQ_STATS * tx_cnt +
+		      STMMAC_RXQ_STATS * rx_cnt;
+
+		if (priv->dma_cap.rmon)
+			len += STMMAC_MMC_STATS_LEN;
+		if (priv->dma_cap.asp) {
