+
+	if (queue < 4) {
+		value = readl(ioaddr + MTL_RXQ_DMA_MAP0);
+		value &= ~MTL_RXQ_DMA_QXMDMACH_MASK(queue);
+		value |= MTL_RXQ_DMA_QXMDMACH(chan, queue);
