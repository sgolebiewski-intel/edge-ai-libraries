+#include <linux/crc32.h>
+#include <linux/slab.h>
+#include <linux/ethtool.h>
+#include <asm/io.h>
+#include "stmmac-6.6-ethercat.h"
+#include "stmmac_pcs-6.6-ethercat.h"
+#include "dwmac1000-6.6-ethercat.h"
