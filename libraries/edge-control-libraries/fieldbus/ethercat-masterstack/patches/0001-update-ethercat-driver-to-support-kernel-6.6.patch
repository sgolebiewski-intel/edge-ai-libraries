+	int vid = (msgbuf[1] & E1000_VLVF_VLANID_MASK);
+	int ret;
+
+	if (adapter->vf_data[vf].pf_vlan)
+		return -1;
+
+	/* VLAN 0 is a special case, don't allow it to be removed */
+	if (!vid && !add)
