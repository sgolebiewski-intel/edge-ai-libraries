+	igb_attr->dev_attr.store = NULL;
+	igb_attr->dev_attr.attr.mode = 0444;
+	igb_attr->dev_attr.attr.name = igb_attr->name;
+	sysfs_attr_init(&igb_attr->dev_attr.attr);
